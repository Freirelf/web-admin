{% extends 'base.html.twig' %}

{% block title %}Produtos{% endblock %}

{% block body %}
    <h1>Produtos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ product.shortDescription }}</td>
            </tr>
            <tr>
                <th>YoutubeVideo</th>
                <td>{{ product.youtubeVideo }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ product.language }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_index') }}" class="btn btn-outline-secondary me-2 float-start">Voltar</a>

    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-outline-secondary me-2 float-start">Voltar</a>
    {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}
