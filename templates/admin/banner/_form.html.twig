</div>

<div class="mb-3">
	<label for="{{ form.subtitle.vars.id }}" class="form-label">Subtítulo</label>
    {{ form_widget(form.subtitle, {'attr': {'class': 'form-control' } }) }}
	<div id="emailHelp" class="form-text">Informe o subtítulo.</div>
</div>

<div class="mb-3">
	<label for="{{ form.active.vars.id }}" class="form-label">Status</label>
    {{ form_widget(form.active, {'attr': {'class': 'form-control' } }) }}
